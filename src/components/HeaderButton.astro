---
interface Props {
	link: string;
}

const { link } = Astro.props;

---

<a href={link} class="text-yellow-500 hover:text-white border border-yellow-500 hover:bg-yellow-500 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-lg px-5 py-2.5 text-center">
    <button type="button" class="h-8 md:h-16" >
        <slot />
    </button>
</a>