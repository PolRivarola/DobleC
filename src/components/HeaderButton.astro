---
interface Props {
	link: string;
}

const { link } = Astro.props;

---

<a href={link} class="text-yellow-400 hover:text-white border border-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-lg px-5 py-2.5 text-center  dark:border-yellow-300 dark:text-yellow-300 dark:hover:text-white dark:hover:bg-yellow-400 dark:focus:ring-yellow-900">
    <button type="button" class="h-8 md:h-16" >
        <slot />
    </button>
</a>